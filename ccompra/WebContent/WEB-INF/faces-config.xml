<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    
   	<application>
		<resource-bundle>
		   <base-name>ufrrj.tebdes.ccompra.mensagens.Messages</base-name>
		   <var>msgs</var>
		</resource-bundle>
		<locale-config>
	        <default-locale>pt_BR</default-locale>
  		</locale-config>
	</application>
	
   	<navigation-rule>
        <from-view-id>/*</from-view-id>
	   	<navigation-case>
			<from-outcome>reload</from-outcome>
			<to-view-id>/resources/componentes/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>emptyCar</from-outcome>
			<to-view-id>/resources/componentes/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>pages</from-outcome>
			<to-view-id>/resources/componentes/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/resources/componentes/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>cadProduto</from-outcome>
			<to-view-id>/resources/componentes/cadastros/produto.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>cadUsuario</from-outcome>
			<to-view-id>/resources/componentes/cadastros/usuario.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/resources/componentes/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>addCarrinho</from-outcome>
			<to-view-id>/resources/componentes/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>historico</from-outcome>
			<to-view-id>/resources/componentes/historico.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>pesquisar</from-outcome>
			<to-view-id>/resources/componentes/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
   	
   	<navigation-rule>
        <from-view-id>/resources/componentes/cadastros/usuario.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>logged</from-outcome>
			<to-view-id>/resources/componentes/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>saveUsuario</from-outcome>
			<to-view-id>/resources/componentes/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>fail</from-outcome>
			<to-view-id>/resources/componentes/cadastros/usuario.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
    </navigation-rule>
    
    <navigation-rule>
		<from-view-id>/resources/componentes/index.xhtml</from-view-id>
		<navigation-case>
		    <from-action>#{loginBean.login}</from-action>
			<from-outcome>logged</from-outcome>
			<to-view-id>/resources/componentes/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>finalizar</from-outcome>
			<to-view-id>/resources/componentes/finalizarCompra.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>fail</from-outcome>
			<to-view-id>/resources/componentes/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
    <navigation-rule>
		<from-view-id>/resources/componentes/cadastros/produto.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>fail</from-outcome>
			<to-view-id>/resources/componentes/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
    <navigation-rule>
		<from-view-id>/resources/componentes/finalizarCompra.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>finalizada</from-outcome>
			<to-view-id>/resources/componentes/compraEfetuada.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>Nfinalizada</from-outcome>
			<to-view-id>/resources/componentes/finalizarCompra.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
</faces-config>
